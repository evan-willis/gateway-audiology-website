<style is:global>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: "Raleway Variable", sans-serif;
  }
  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  p {
    font-weight: 300;
    color: #2a7b6f;
  }

  button {
    font-family: "Raleway Variable", sans-serif;
    font-weight: 300;
    color: #2a7b6f;
    background-color: white;
    border: 2px solid #2a7b6f;
    border-radius: 20px;
    padding: 10px 20px;
    cursor: pointer;
    transition:
      background-color 0.3s,
      color 0.3s;
  }

  button:hover {
    background-color: #2a7b6f;
    color: white;
  }

  button a {
    color: inherit;
    text-decoration: none;
  }

  button:hover a {
    color: white;
  }

  a {
    color: #2a7b6f;
  }
</style>
